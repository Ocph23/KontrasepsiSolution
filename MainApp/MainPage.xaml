<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Shell.NavBarIsVisible="False"
             x:Class="MainApp.MainPage">

    <Grid RowDefinitions="auto,*, auto">
        <Image Opacity="0.8" Grid.RowSpan="3" HeightRequest="150" 
                           Aspect="Center" Source="Resources/Images/card1.png"></Image>
        <StackLayout Padding="20" >
            <Label Text="DATA PELAYANAN" FontAttributes="Bold" FontSize="20"></Label>
            <ImageButton WidthRequest="35" HorizontalOptions="End"
                         HeightRequest="35" Margin="10,0"
                         Command="{Binding AddPelayananCommand}" Opacity="0.8"
                         Source="Resources/Images/plus.png"></ImageButton>
        </StackLayout>
        <StackLayout Grid.Row="1" IsVisible="{Binding NotFoundData}" >
            <Label Text="{Binding Message}"
                   FontSize="18" VerticalOptions="CenterAndExpand"
                   TextColor="IndianRed" HorizontalOptions="Center"></Label>
        </StackLayout>

        <CollectionView x:Name="collection" ItemsSource="{Binding Model.Pelayanan}" Grid.Row="1" SelectionMode="Single" SelectedItem="{Binding SelectedItem}"
                        SelectionChangedCommand="{Binding EditCommand}" SelectionChangedCommandParameter="{Binding ., Source={RelativeSource AncestorLevel=2}}" >
            <CollectionView.ItemTemplate>
                <DataTemplate>
                        <Frame Padding="0" Margin="20" Opacity="0.8" >
                            <Frame.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#5adff9" Offset="1.0" />
                                    <GradientStop Color="#c6f1f7" Offset="0.0" />
                                </LinearGradientBrush>
                            </Frame.Background>
                            <Grid Margin="0" >
                                <StackLayout Padding="20" Spacing="5">
                                    <StackLayout Margin="5">
                                        <Label Text="Nomor" FontSize="Small"></Label>
                                        <Label FontSize="Subtitle" Text="2525252325"></Label>
                                    </StackLayout>
                                    <StackLayout Margin="5">
                                        <Label Text="Tanggal Pelayanan" FontSize="Small"></Label>
                                        <Label FontSize="Subtitle" Text="25 Januari 2022"></Label>
                                    </StackLayout>

                                    <StackLayout Margin="5">
                                        <Label Text="Alat Kontrasepsi Pilihan" FontSize="Small"></Label>
                                        <Label FontSize="Subtitle" Text="Suntik"></Label>
                                    </StackLayout>
                                    <StackLayout Margin="5">
                                        <Label Text="Penanggung Jawab" FontSize="Small"></Label> 
                                        <Button WidthRequest="100" 
                         HeightRequest="40" Margin="10"
                         Command="{Binding EditCommand}" CommandParameter="{Binding .}" Text="Detail"></Button>
                                    </StackLayout>
                                </StackLayout>
                            </Grid>
                        </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
